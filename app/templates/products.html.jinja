{% extends "base.html.jinja" %}
{% block content %}
    <ul class="list-group">
        {% for product in products %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a class="nav-link" href="{{url_for('product', product_id=product)}}"><i class="mb-3"></i>{{product}}</a>
                <span class="badge bg-white">{{loop.index}}</span>
            </li>
        {% endfor %}
    </ul>
{% endblock content %}